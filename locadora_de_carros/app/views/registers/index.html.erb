<h1>Cadastro Locadora</h1>

<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Endereço</th>
      <th>Cpf</th>
      <th>Data de Nascimento</th>
      <th>Telefone</th>
      <th colspan="3"></th>
      
    </tr>
  </thead>

  <tbody>
    <% @registers.each do |register| %>
      <tr>
        <td><%= register.name %></td>
        <td><%= register.adress %></td>
        <td><%= register.cpf %></td>
        <td><%= register.born %></td>
        <td><%= register.tellphone %></td>
        <td><%= link_to 'Mostar', register %></td>
        <td><%= link_to 'Editar', edit_register_path(register) %></td>
        <td><%= link_to 'Deletar', register, method: :delete, data: { confirm: 'Você Tem Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>


